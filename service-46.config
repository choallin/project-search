<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <appSettings>

    <add key="ImportPath" value="/some/path/someFolder" />
    <add key="ResultFolder" value="/some/path/someFolder/Processed" />
    <add key="ImportCheckIntervall" value="2" />
    <add key="ConnectionString" value="Server=server.domain.domain.domain;Database=name_name_name;Integrated Security=true;" />
    <add key="RootFolder" value="root/upper/smth/MPRootFolder:1/" />
    <add key="InternalsmthUrl" value="https://somethingapp1
:4120/" />
    <add key="BearerToken" value="Token" />
    <add key="Customer" value="Default" />
    <add key="PublicsmthUrl" value="https://smth.smth.com"/>
    <add key="smthUrl" value="https://smth.smth.com/" />

  </appSettings>

  <system.net>
    <defaultProxy>
      <proxy autoDetect="True" bypassonlocal="False" usesystemdefault="True"/>
    </defaultProxy>
  </system.net>

  <log4net>
    <appender name="SomeServiceLog" type="log4net.Appender.RollingFileAppender">
    <file value="..\..\..\Logs\instances\smth_prod\SomeService\SomeService.log"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <staticLogFileName value="false"/>
      <appendToFile value="true"/>
      <maximumFileSize value="10MB"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="50"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{yyyy.MM.dd HH:mm:ss.fff} %-5p %20.30logger [%property{pid}]-[%thread] - %m%n %exception"/>
      </layout>
    </appender>
    <appender name="SomeServiceErrorLog" type="log4net.Appender.RollingFileAppender">
      <file value="..\..\..\Logs\instances\smth_prod\SomeService\SomeService.Error.log"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <staticLogFileName value="false"/>
      <appendToFile value="true"/>
      <maximumFileSize value="10MB"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="50"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{yyyy.MM.dd HH:mm:ss.fff} %-5p %20.30logger [%property{pid}]-[%thread] - %m%n %exception"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR"/>
        <levelMax value="FATAL"/>
      </filter>
    </appender>

    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red"/>
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <foreColor value="White"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{yyyy.MM.dd HH:mm:ss.fff} %-5p %20.30logger [%property{pid}]-[%thread] - %m%n %exception"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="SomeServiceLog"/>
      <appender-ref ref="SomeServiceErrorLog"/>
      <appender-ref ref="ColoredConsoleAppender"/>
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
  </startup>
</configuration>
